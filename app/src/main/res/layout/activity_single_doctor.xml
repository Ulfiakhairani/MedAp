<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleDoctorActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/singleImage"
                android:layout_width="match_parent"
                android:layout_height="248dp"
                android:src="@drawable/upload" />

            <TextView
                android:id="@+id/singleDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/inter_bold"
                android:text="Nama Dokter"
                android:textColor="@color/black"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/singleSpecialist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="Specialisasi dokter"
                android:textColor="#877C7C"
                android:layout_marginStart="20dp"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/map"/>

                <TextView
                    android:id="@+id/singleLocation"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Rumah Sakit Central Medical"
                    android:textColor="@color/black"
                    android:layout_marginLeft="3dp"
                    android:textSize="15dp"
                    android:fontFamily="@font/inter_medium"/>

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/teamwork"/>

                <TextView
                    android:id="@+id/singlePatient"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="3000+ Pasien"
                    android:textColor="@color/black"
                    android:layout_marginLeft="3dp"
                    android:textSize="15dp"
                    android:fontFamily="@font/inter_medium"/>

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/star"/>

                <TextView
                    android:id="@+id/singleRating"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="5.0"
                    android:textColor="@color/black"
                    android:layout_marginLeft="3dp"
                    android:textSize="20dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/inter_medium"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/singleDescription"
                    android:layout_width="373dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris malesuada consectetur mauris, nec elementum nisi cursus id. Nullam consectetur eros vitae urna pretium, at lacinia tellus efficitur. Sed nec est non nisl congue pellentesque. Fusce scelerisque rutrum dolor sit amet convallis. Ut interdum mauris ac enim pretium, vitae tempor elit ullamcorper. Integer tincidunt mauris sit amet efficitur posuere"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:justificationMode="inter_word"
                    android:fontFamily="@font/inter_regular"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnJanji"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Buat Janji"
                android:fontFamily="@font/inter_bold"
                android:background="@drawable/custom_btn"
                android:textAllCaps="false"
                android:textSize="20dp"
                />


        </LinearLayout>

    </RelativeLayout>

</ScrollView>